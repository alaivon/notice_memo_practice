<%= simple_form_for @notice do |f| %>
	<div class="form-input">
		<%= f.label "Type:" %>
		<%= f.collection_radio_buttons :category_id, Category.all, :id, :name, label: "Type:" %>
		<%= f.input :location  %>
		<%= f.input :event %>
		<%= f.input :event_time, label: "When" %>
		<%= f.input :postscript, label: "P.S" %>
	</div>

		<%= f.submit "Create Memo", class: "btn btn-warning" %>

<% end %>
